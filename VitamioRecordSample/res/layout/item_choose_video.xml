<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="124dp"
            android:layout_height="94dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:background="@drawable/editor_back"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_recode"
            android:layout_width="116dp"
            android:layout_height="86dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="7dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_videoTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/iv_recode"
            android:text="TextView01"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_recode"
            android:layout_toRightOf="@+id/iv_recode"
            android:text="TextView03"
            android:textColor="@color/gray" >
        </TextView>

        <TextView
            android:id="@+id/tv_changeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_recode"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="TextView03"
            android:textColor="@color/gray"
            android:textSize="16sp" >
        </TextView>

        <TextView
            style="@style/deep_divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</RelativeLayout>